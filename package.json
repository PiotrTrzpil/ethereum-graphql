{
  "name": "ethereum-graphql",
  "version": "1.0.0",
  "description": "Ethereum to GraphQL bindings",
  "main": "server.js",
  "dependencies": {
    "apollo-server-express": "^1.3.0",
    "argparse": "^1.0.9",
    "body-parser": "^1.18.2",
    "casual": "^1.5.19",
    "commander": "^2.13.0",
    "cors": "^2.8.4",
    "express": "^4.16.2",
    "graphql": "^0.11.7",
    "graphql-subscriptions": "latest",
    "graphql-tools": "^2.13.0",
    "lodash": "^4.17.4",
    "node-fetch": "^3.1.1",
    "sequelize": "^4.28.2",
    "subscriptions-transport-ws": "latest",
    "winston": "^3.0.0-rc1",
    "ws": "^3.3.3"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-jest": "^22.0.4",
    "babel-plugin-array-includes": "^2.0.3",
    "babel-plugin-syntax-flow": "^6.18.0",
    "babel-plugin-transform-es2015-destructuring": "^6.23.0",
    "babel-plugin-transform-es2017-object-entries": "0.0.4",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-es2015": "latest",
    "babel-preset-flow": "^6.23.0",
    "flow-bin": "^0.63.1",
    "jest": "^22.1.4",
    "nodemon": "^1.12.1"
  },
  "babel": {
    "presets": [
      "flow",
      "env"
    ]
  },
  "standard": {
    "plugins": [
      "flowtype"
    ],
    "parser": "babel-eslint"
  },
  "jest": {
    "verbose": true,
    "testEnvironment": "node",
    "transform": {
      "^.+\\.js$": "babel-jest"
    }
  },
  "scripts": {
    "build": "babel src/ -d target/",
    "start-node": "npm run build && babel-node",
    "start": "nodemon --exec npm run start-node -- ./target/server.js",
    "test": "jest",
    "test-loop": "nodemon --exec \"npm test || true\" "
  },
  "nodemonConfig": {
    "ignore": [
      "target/*"
    ],
    "delay": "1500"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PiotrTrzpil/ethereum-graphql.git"
  },
  "author": "PiotrTrzpil",
  "license": "Apache 2"
}
